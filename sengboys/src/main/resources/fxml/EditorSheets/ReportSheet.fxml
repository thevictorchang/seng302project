<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml" stylesheets="/css/editorSheet.css" styleClass="container" minWidth="315" minHeight="200">
    <GridPane hgap="10" vgap="5">

        <Label GridPane.rowIndex="1" GridPane.columnIndex="2" text="Choose the report level" styleClass="reportSheet"> </Label>
        <ChoiceBox fx:id="reportLevelChoice" GridPane.rowIndex="2" GridPane.columnIndex="2" value="None" minWidth="250" styleClass="dialogCombo"></ChoiceBox>


        <VBox GridPane.rowIndex="3" GridPane.columnIndex="2" GridPane.rowSpan="3" fx:id="reportSelector" prefHeight="150" minWidth="250" alignment="CENTER">
            <children>
                <ListView fx:id="reportableObjectsView" prefWidth="250.0" />
            </children>
        </VBox>

        <Label GridPane.columnIndex="0" GridPane.rowIndex="10" GridPane.columnSpan="3" styleClass="errorlabel" fx:id="errorLabel"></Label>
    </GridPane>
</VBox>