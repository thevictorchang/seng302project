<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml" stylesheets="/css/editorSheet.css" styleClass="container">
    <GridPane hgap="10" vgap="5">
        <Label GridPane.rowIndex="0" GridPane.columnIndex="0">Short Name: </Label>


        <TextField GridPane.rowIndex="0" GridPane.columnIndex="1" GridPane.columnSpan="2" fx:id="shortNameTextField"></TextField>

        <Label GridPane.rowIndex="1" GridPane.columnIndex="0">Description: </Label>
        <TextField GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.columnSpan="2" fx:id="descriptionTextField"></TextField>

        <Label GridPane.rowIndex="2" GridPane.columnIndex="0">Release Date: </Label>
        <DatePicker GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.columnSpan="2" fx:id="releaseDatePicker" styleClass="dialogCombo"></DatePicker>


        <Label GridPane.rowIndex="3" GridPane.columnIndex="0" text="Add to Project"> </Label>
        <ComboBox  GridPane.rowIndex="3" GridPane.columnIndex="1" value="None" fx:id="projectChoice" styleClass="dialogCombo"></ComboBox>

        <Label GridPane.rowIndex="5" GridPane.columnIndex="0"  GridPane.columnSpan="2" styleClass="errorlabel" fx:id="projectErrorLabel"></Label>
        <Label GridPane.rowIndex="6" GridPane.columnIndex="0"  GridPane.columnSpan="2" styleClass="errorlabel" fx:id="dateErrorLabel"></Label>
        <Label GridPane.rowIndex="7" GridPane.columnIndex="0"  GridPane.columnSpan="2" styleClass="errorlabel" fx:id="errorLabel"></Label>

    </GridPane>

</VBox>